{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pixelcomplete",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [ "**" ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "window": {
        "setSize": true,
        "setPosition": true,
        "setAlwaysOnTop": true,
        "startDragging": true,
        "close": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "pixelcomplete",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "io.github.camiha.pixelcomplete",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
